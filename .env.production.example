# Production Environment Variables
# Copy to .env.production and fill in your values

# Database Configuration
DB_TYPE=postgres
# Main database for system management
DATABASE_URL=postgresql://cbadmin:YOUR_SECURE_PASSWORD@postgres:5432/continuitybridge_main
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD

# Application
NODE_ENV=production
PORT=5000

# Domain Configuration
APP_DOMAIN=yourdomain.com
APP_URL=https://yourdomain.com

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key

# Superadmin API Key
SUPERADMIN_API_KEY=cb_prod_your_secure_founder_key

# Optional: Custom SMTP (if not using Resend)
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=noreply@yourdomain.com
# SMTP_PASS=your_smtp_password
# SMTP_FROM=noreply@yourdomain.com

# Security
# SESSION_SECRET=generate_a_random_secret_here

# Logging
# LOG_LEVEL=info
