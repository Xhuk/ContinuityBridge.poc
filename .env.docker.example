# ContinuityBridge - Docker Compose Deployment (Enterprise Self-Hosted)

# === PostgreSQL Configuration ===
POSTGRES_PASSWORD=your_secure_postgres_password_here
# Generate with: openssl rand -base64 32

# === Valkey Configuration ===
VALKEY_ENABLED=true
VALKEY_PASSWORD=your_secure_valkey_password_here
# Generate with: openssl rand -base64 32

# === Application Domain Configuration ===
APP_URL=https://yourdomain.com
APP_DOMAIN=yourdomain.com
EXPORT_CONTACT_EMAIL=support@yourdomain.com

# === Resend Configuration (Superadmin Emails) ===
RESEND_API_KEY=re_YOUR_RESEND_API_KEY_HERE
RESEND_FROM_EMAIL=noreply@yourdomain.com

# === Security Configuration ===
SUPERADMIN_API_KEY=cb_YOUR_SECURE_SUPERADMIN_KEY_HERE
ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY_HERE

# === Authentication Configuration ===
AUTH_GUARD_ENABLED=true

# === License Validation ===
LICENSE_VALIDATION_URL=https://yourdomain.com/api/license/validate

# === Organization ===
ORGANIZATION_ID=your-org-id
RUNTIME_VERSION=1.0.0

# === AI Assistant (Optional) ===
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# === Deployment Type ===
# "customer" = Customer self-hosted deployment
VITE_DEPLOYMENT_TYPE=customer

# === Remote Updates Configuration ===
# Enable remote updates from founder platform (Render)
REMOTE_UPDATES_ENABLED=true
FOUNDER_PLATFORM_URL=https://continuitybridge.onrender.com

# Auto-update settings
AUTO_UPDATE=true  # Auto-apply updates in DEV
UPDATE_CHANNEL=stable  # stable | beta | nightly
UPDATE_CHECK_INTERVAL_HOURS=24  # Check daily
ENVIRONMENT=dev  # dev | test | prod

# === Logging ===
LOG_LEVEL=info
DB_LOGGING=true
DEBUG=false
