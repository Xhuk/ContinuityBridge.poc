{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://continuitybridge.io/schemas/canonical/order.schema.json",
  "title": "Canonical Order",
  "description": "Canonical order format for ContinuityBridge - normalized across all sources (BYDM, Amazon, MercadoLibre, etc.)",
  "type": "object",
  "required": ["orderId", "orderDate", "items"],
  "properties": {
    "orderId": {
      "type": "string",
      "description": "Unique order identifier"
    },
    "externalOrderId": {
      "type": "string",
      "description": "External system order reference (e.g., PO number, marketplace order ID)"
    },
    "orderDate": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 order creation timestamp"
    },
    "requestedDeliveryDate": {
      "type": "string",
      "format": "date-time",
      "description": "Requested delivery date"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "confirmed", "processing", "shipped", "delivered", "cancelled"],
      "description": "Normalized order status"
    },
    "customer": {
      "type": "object",
      "required": ["customerId"],
      "properties": {
        "customerId": {
          "type": "string",
          "description": "Customer identifier"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        }
      }
    },
    "shipTo": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "address1": {
          "type": "string"
        },
        "address2": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        },
        "country": {
          "type": "string",
          "pattern": "^[A-Z]{2}$",
          "description": "ISO 3166-1 alpha-2 country code"
        }
      }
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["lineNumber", "sku", "quantity"],
        "properties": {
          "lineNumber": {
            "type": "integer",
            "minimum": 1,
            "description": "Line item number"
          },
          "sku": {
            "type": "string",
            "description": "Product SKU/item identifier"
          },
          "description": {
            "type": "string",
            "description": "Product description"
          },
          "quantity": {
            "type": "number",
            "minimum": 0,
            "description": "Ordered quantity"
          },
          "uom": {
            "type": "string",
            "description": "Unit of measure (EA, CS, PLT, etc.)"
          },
          "unitPrice": {
            "type": "number",
            "minimum": 0
          },
          "currency": {
            "type": "string",
            "pattern": "^[A-Z]{3}$",
            "description": "ISO 4217 currency code"
          },
          "requestedDeliveryDate": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "warehouse": {
      "type": "object",
      "properties": {
        "warehouseId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "carrier": {
      "type": "object",
      "properties": {
        "carrierId": {
          "type": "string"
        },
        "carrierName": {
          "type": "string"
        },
        "serviceLevel": {
          "type": "string",
          "description": "Shipping service level (ground, express, overnight, etc.)"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional custom fields",
      "additionalProperties": true
    }
  }
}
