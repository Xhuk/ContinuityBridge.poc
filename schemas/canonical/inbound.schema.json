{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://continuitybridge.io/schemas/canonical/inbound.schema.json",
  "title": "Canonical Inbound/Receiving",
  "description": "Canonical inbound/receiving advice format for ContinuityBridge",
  "type": "object",
  "required": ["inboundId", "expectedDate", "items"],
  "properties": {
    "inboundId": {
      "type": "string",
      "description": "Unique inbound/ASN identifier"
    },
    "purchaseOrderId": {
      "type": "string",
      "description": "Associated purchase order ID"
    },
    "expectedDate": {
      "type": "string",
      "format": "date-time",
      "description": "Expected arrival date"
    },
    "actualReceiptDate": {
      "type": "string",
      "format": "date-time",
      "description": "Actual receipt date"
    },
    "status": {
      "type": "string",
      "enum": ["expected", "in_transit", "receiving", "completed", "closed", "exception"],
      "description": "Normalized inbound status"
    },
    "supplier": {
      "type": "object",
      "properties": {
        "supplierId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "address1": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "country": {
          "type": "string",
          "pattern": "^[A-Z]{2}$"
        }
      }
    },
    "warehouse": {
      "type": "object",
      "properties": {
        "warehouseId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["lineNumber", "sku", "expectedQuantity"],
        "properties": {
          "lineNumber": {
            "type": "integer",
            "minimum": 1
          },
          "sku": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "expectedQuantity": {
            "type": "number",
            "minimum": 0
          },
          "receivedQuantity": {
            "type": "number",
            "minimum": 0
          },
          "uom": {
            "type": "string"
          },
          "lotNumber": {
            "type": "string"
          },
          "expirationDate": {
            "type": "string",
            "format": "date"
          },
          "serialNumbers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "condition": {
            "type": "string",
            "enum": ["new", "used", "damaged", "returned"]
          }
        }
      }
    },
    "carrier": {
      "type": "object",
      "properties": {
        "carrierId": {
          "type": "string"
        },
        "carrierName": {
          "type": "string"
        },
        "trackingNumber": {
          "type": "string"
        },
        "scac": {
          "type": "string"
        }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
